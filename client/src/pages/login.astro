---
import Alert from "@components/Alert.vue";
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout title="Entlastungsberechnung">
    <Alert
        type="warning"
        text="Diese Seite ist veraltet und wird nicht mehr unterstützt. Sie werden abgemeldet."
    />
</DefaultLayout>

<script>
    import { pb } from "@src/pocketbase";
    import { customAlert } from "@src/toast";

    window.location.href = "/admin/login";
    await customAlert(
        "DEPRECATED | VERALTED",
        "Diese Seite ist veraltet und wird nicht mehr unterstützt. Sie werden abgemeldet."
    );
    await pb.authStore.clear();
</script>
